<?xml version="1.0"?>

<robot name="go2" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- DEBUG mode: Set to 'true' to fix robot to world frame for testing kinematics without physics simulation -->
    <xacro:arg name="DEBUG" default="false"/>

    <xacro:include filename="$(find unitree_go2_description)/xacro/constants.xacro"/>
    <xacro:include filename="$(find unitree_go2_description)/xacro/materials.xacro"/>
    <xacro:include filename="$(find unitree_go2_description)/xacro/leg.xacro"/>
    <xacro:include filename="$(find unitree_go2_description)/xacro/gazebo.xacro"/>
    <xacro:include filename="$(find unitree_go2_description)/xacro/lidar.xacro"/>

    <!-- When DEBUG is true, fix the robot to world frame for kinematic testing -->
    <xacro:if value="$(arg DEBUG)">
        <link name="world"/>
        <joint name="base_static_joint" type="fixed">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <parent link="world"/>
            <child link="base_link"/>
        </joint>
    </xacro:if> 

    <!-- 
        Root link with NO inertia to avoid KDL warning.
        This is a massless dummy link that serves as the root of the kinematic tree.
    -->
    <link name="base_link">
        <!-- No inertia, no mass - this is just a reference frame -->
    </link>

    <!-- 
        Fixed joint connecting base_link to the actual robot body (trunk).
        This allows the robot to have a proper root link without inertia.
    -->
    <joint name="base_to_trunk" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="base_link"/>
        <child link="trunk"/>
    </joint>

    <!-- 
        Trunk is the actual robot body with mass and inertia.
        All physical properties are defined here.
    -->
    <link name="trunk">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://unitree_go2_description/meshes/trunk.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="${trunk_length} ${trunk_width} ${trunk_height}"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="${trunk_com_x} ${trunk_com_y} ${trunk_com_z}"/>
            <mass value="${trunk_mass}"/>
            <inertia
                ixx="${trunk_ixx}" ixy="${trunk_ixy}" ixz="${trunk_ixz}"
                iyy="${trunk_iyy}" iyz="${trunk_iyz}"
                izz="${trunk_izz}"/>  
        </inertial>
    </link>

    <!-- ========================================= -->
    <!-- IMU SENSOR                                 -->
    <!-- ========================================= -->
    
    <joint name="imu_joint" type="fixed">
        <parent link="trunk"/>
        <child link="imu_link"/>
        <origin rpy="0 0 0" xyz="-0.02557 0 0.04232"/>
    </joint>

    <link name="imu_link">
        <inertial>
            <mass value="0.001"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.015 0.015 0.005"/>
            </geometry>
            <material name="orange">
                <color rgba="1.0 0.5 0.0 1"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.015 0.015 0.005"/>
            </geometry>
        </collision>
    </link>

    <!-- ========================================= -->
    <!-- FRONT CAMERA                               -->
    <!-- ========================================= -->
    
    <joint name="front_camera_joint" type="fixed">
        <parent link="trunk"/>
        <child link="front_camera_link"/>
        <origin rpy="0 0 0" xyz="0.32715 -0.00003 0.04297"/>
    </joint>

    <link name="front_camera_link">
        <inertial>
            <mass value="0.01"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.03 0.01"/>
            </geometry>
            <material name="camera_grey">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.02 0.03 0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- Camera optical frame (standard ROS convention) -->
    <joint name="front_camera_optical_joint" type="fixed">
        <parent link="front_camera_link"/>
        <child link="front_camera_optical_frame"/>
        <!-- Rotate to optical frame: x-right, y-down, z-forward -->
        <origin rpy="${-pi/2} 0 ${-pi/2}" xyz="0 0 0"/>
    </joint>

    <link name="front_camera_optical_frame"/>

    <!-- ========================================= -->
    <!-- RADAR                                      -->
    <!-- ========================================= -->
    
    <joint name="radar_joint" type="fixed">
        <parent link="trunk"/>
        <child link="radar_link"/>
        <origin rpy="0 2.8782 0" xyz="0.28945 0 -0.046825"/>
    </joint>

    <link name="radar_link">
        <inertial>
            <mass value="0.01"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.015"/>
            </geometry>
            <material name="radar_black">
                <color rgba="0.1 0.1 0.1 1"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.015"/>
            </geometry>
        </collision>
    </link>

    <!-- ========================================= -->
    <!-- LEGS                                       -->
    <!-- ========================================= -->
    
    <xacro:leg name="FR" mirror="-1" mirror_dae="False" front_hind="1"  front_hind_dae="True"  />
    <xacro:leg name="FL" mirror="1"  mirror_dae="True"  front_hind="1"  front_hind_dae="True"  />
    <xacro:leg name="RR" mirror="-1" mirror_dae="False" front_hind="-1" front_hind_dae="False" />
    <xacro:leg name="RL" mirror="1"  mirror_dae="True"  front_hind="-1" front_hind_dae="False" />

    <!-- ROS2 Control -->
    <ros2_control name="GazeboSystem" type="system">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>
      
      <!-- FL Leg -->
      <joint name="FL_hip_joint">
        <command_interface name="effort"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="FL_thigh_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">0.6</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      <joint name="FL_calf_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">-1.2</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      
      <!-- FR Leg -->
      <joint name="FR_hip_joint">
        <command_interface name="effort"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="FR_thigh_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">0.6</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      <joint name="FR_calf_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">-1.2</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      
      <!-- RL Leg -->
      <joint name="RL_hip_joint">
        <command_interface name="effort"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="RL_thigh_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">0.6</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      <joint name="RL_calf_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">-1.2</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      
      <!-- RR Leg -->
      <joint name="RR_hip_joint">
        <command_interface name="effort"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="RR_thigh_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">0.6</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
      <joint name="RR_calf_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
            <param name="initial_value">-1.2</param>
        </state_interface>
        <state_interface name="velocity"/>
      </joint>
    </ros2_control>

</robot>
